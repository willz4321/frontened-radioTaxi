<?xml version="1.0" encoding="UTF-8"?>
<plugin id="cordova-plugin-custom-notification" version="1.0.0" xmlns="http://apache.org/cordova/ns/plugins" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>CustomNotification</name>
    <description>Cordova Custom Notification Plugin</description>
    <license>MIT</license>
    <keywords>cordova,notification,custom</keywords>
    <engines>
        <engine name="cordova" version=">=10.0.0"/>
    </engines>
    <platform name="android">
        <config-file target="config.xml" parent="/*">
            <feature name="CustomNotification">
                <param name="android-package" value="com.axiomarobotics.radiotaxi.CustomNotification"/>
            </feature>
        </config-file>
        <source-file src="src/android/CustomNotification.java" target-dir="src/com/axiomarobotics/radiotaxi"/>
    </platform>
</plugin>
